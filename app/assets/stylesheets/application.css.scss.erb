// GLOBAL

$text-color: #555;
$background-color: #FFF;
$alt-background-color: #F2F2F2;
$field-padding: 10px;
$border-radius: 15px;

@mixin border-radius {
  -webkit-border-radius: $border-radius;
     -moz-border-radius: $border-radius;
      -ms-border-radius: $border-radius;
       -o-border-radius: $border-radius;
          border-radius: $border-radius;
}

@mixin box-shadow {
  box-shadow: 0px 1px 2px rgba(0,0,0,0.1);
}

body {
  color: $text-color;
}

.container {
  max-width: 70em;
}

h1 {
  font-family: 'Oleo Script', cursive;
  &, a, a:hover {
    font-weight: normal;
  }
}

h2, h3 {
  font-weight: bold;
}

a, a:hover {
  color: $text-color;
  font-weight: bold;
}
a:hover.btn {
  font-weight: normal;
}

hr {
  margin: 2em auto;
}

.gmaps4rails_map {
  height: 20em;
  img {
    max-width: none;
  }
  label {
    width: auto; display:inline;
  }
}

input {
  &::-webkit-input-placeholder { /* WebKit browsers */
    color: #BBB;
  }
  &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color: #BBB;
  }
  &::-moz-placeholder { /* Mozilla Firefox 19+ */
    color: #BBB;
  }
  &:-ms-input-placeholder { /* Internet Explorer 10+ */
    color: #BBB;
  }
}

.btn-xlarge {
  @extend .btn-large;
  font-size: 1.25em;
}

// LAYOUT

#header {
  background-image: url('<%= asset_path 'header_background.jpg' %>');
  background-size: cover;
  background-repeat: no-repeat;
  background-position-y: center;

  h1 {
    font-size: 3.625em;
    padding: 0;
    margin: 0;
    a:hover {
      text-decoration: none;
    }
  }

  #header-title {
    padding: 2.5em 0;
    background: rgba(255,255,255,0.62);
    position: relative;
    .container {
      margin-top: 0;
      .triangle {
        position: absolute;
        bottom: -60px;
        img {
          width: 50%;
          height: 50%;
        }
      }
    }
  }
}

#new-rent {
  margin-top: 8em;
  margin-bottom: 7em;

  .errors {
    margin-bottom: 2em;
    span {
      margin-right: $field-padding;
      background-color: $background-color;
      line-height: 2.5em;
      padding: $field-padding;
      color: red;
      @include border-radius;
      @include box-shadow;
    }
  }

  .field {
    position: relative;
    display: inline-block;
    background-color: $background-color;
    line-height: 2.25em;
    margin: 0em 2em 2em 0em;
    padding-right: $field-padding;
    @include border-radius;
    @include box-shadow;
    label {
      display: inline-block;
      width: 75px;
      padding: 0 $field-padding;
      margin: 0;
      font-weight: bold;
      text-align: center;
      background-color: $alt-background-color;
      -webkit-border-top-left-radius: $border-radius;
      -webkit-border-bottom-left-radius: $border-radius;
      -moz-border-radius-topleft: $border-radius;
      -moz-border-radius-bottomleft: $border-radius;
      border-top-left-radius: $border-radius;
      border-bottom-left-radius: $border-radius;
    }
    input, select {
      background: transparent;
      border: 0;
      border-color: transparent;
      outline: none;
      margin: 0;
      padding: 0;
      vertical-align: baseline;
      &:focus {
        outline: 0;
        box-shadow: none;
      }
    }
    small {
      position: absolute;
      left: $field-padding/2;
      bottom: -2em;
      font-size: 0.6em;
      //text-shadow: 0px 1px 0px rgba(255,255,255,0.5);
      background-color: $background-color;
      padding: 0 $field-padding/2;
      line-height: 17px;
      @include border-radius;
      @include box-shadow;
    }
  }

  input[name="rent[price]"] {
    width: 60px;
    text-align: right;
    margin-right: 5px;
  }
  input[name="rent[postal_code][0]"] {
    width: 40px;
    margin-left: 5px;
  }
  input[name="rent[postal_code][1]"] {
    width: 30px;
  }
  select[name="rent[typology]"] {
    border: 0 !important;
    -webkit-appearance: none;
    -moz-appearance: none;
    text-indent: 0.01px; /* Removes default arrow from firefox*/
    text-overflow: "";  /*Removes default arrow from firefox*/
    display: inline-block;
    padding: 0 15px 0 5px;
    background: url('data:image/png;base64,') no-repeat right center;
    &::-ms-expand {
      display: none;
    }
  }

  .btn-large {
    margin-top: 0;
    width: 180px;
    line-height: 1em;
    @include border-radius;
    @include box-shadow;
  }
}

#page {
  margin-top: 2em;
}

.section {
  padding-top: 2.5em;
  padding-bottom: 1.5em;
  h2 {
    font-size: 1.5em;
    line-height: 1em;
    margin: 0;
    padding: 0;
  }
  p {
    margin-bottom: 0.5em;
  }
}

#rents-section {
  box-shadow: 0 1px 2px rgba(0,0,0,0.1), 0 -1px 2px rgba(0,0,0,0.1);
  .grid-6 {
    position: relative;
  }
}

.home-map {
  position: relative;
  box-shadow: 0 1px 2px rgba(0,0,0,0.1) inset, 0 -1px 2px rgba(0,0,0,0.1) inset;
  #map {
    position: relative;
    height: 24em;
    #map-legend {
      padding: 0.5em;
      background: $background-color;
      height: 1em;
      line-height: 1em;
      -webkit-border-top-left-radius: $border-radius;
      -webkit-border-top-right-radius: $border-radius;
      -moz-border-radius-topleft: $border-radius;
      -moz-border-radius-topright: $border-radius;
      border-top-left-radius: $border-radius;
      border-top-right-radius: $border-radius;
    }
  }
}

#share-buttons {
  margin-top: 2em;
}

#footer {
  padding: 6em 0 3em;
  text-align: center;
}


// RESULT PAGE

.result-map #map {
  height: 18em;
}

// STATS PAGE

.table {
  td, th {
    vertical-align: middle;
    &.text-right {
      text-align: right;
    }
  }
}

table.hoods {
  margin: 2em 0;
}

.hoods-map .gmaps4rails_map {
  height: 25em;
  margin: 2em 0;
}

.rent-diff-high, .rent-diff-medium, .rent-diff-low {
  padding-left: 25px;
  font-weight: bold;
  background: url('<%= asset_path 'arrow-yellow.png' %>') left center no-repeat;
}
.rent-diff-high {
  color: #EE1100;
  background-image: url('<%= asset_path 'arrow-red.png' %>');
}
.rent-diff-medium {
  color: #EED500;
}
.rent-diff-low {
  color: #009900;
  background-image: url('<%= asset_path 'arrow-green.png' %>');
}
